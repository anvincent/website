{# src/Core/AccountingBundle/Resources/views/Maintenance/budgetedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Budget{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Chart of Accounts
{% endblock %}

{% block body %}

<div class="row">
{{ form_start(forms) }}
{% for row in forms.vars['value'] %}
	{% if loop.index0 in [0,12,24] %}
		{# new column #}
		<div class="col-lg-4">
			<div class="panel panel-default">
				<div class="panel-heading">Financial Year - x</div>
				<div class="panel panel-footer"></div>
			</div>
			<div class="panel panel-default">
				<div class="panel-body">
	            	<div class="dataTable_wrapper">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead><tr>
								<th>Period</th>
								<th>Actual</th>
								<th>Budget</th>
							</tr></thead>
							<tbody>
							    <tr>
							    	<td>{{ row.getPeriod.getPeriodno }}</td>
							    	<td>{{ row.getActual }}</td>
							    	<td>{{ form_row(row.getBudget) }}</td>
								</tr>
	{% else %}
							    <tr>
							    	<td>{{ row.getPeriod.getPeriodno }}</td>
							    	<td>{{ row.getActual }}</td>
							    	<td>{{ form_row(row.getBudget) }}</td>
								</tr>
	{% endif %}
	{% if loop.index0 in [11,23,35] %}
							</tbody>
						</table>
					</div>
				</div>
				<div class="panel-footer">
					<p>Assign monthly budget</p>
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}
{{ form_end(forms) }}
</div>
{% endblock %}

{% block javascripts %}
	<script>
		
	</script>
    {{ parent() }}
    
    
{% endblock %}
