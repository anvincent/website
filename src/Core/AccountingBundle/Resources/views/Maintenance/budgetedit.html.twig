{# src/Core/AccountingBundle/Resources/views/Maintenance/budgetedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Budget{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Chart of Accounts
{% endblock %}

{% block body %}

<div class="row">{{ form_start(form) }}

{% for budget in form.budgets %}
	{% if loop.index0 in [0,12,24] %}
		{# new column #}
		<div class="col-lg-4">
			<div class="panel panel-default">
				<div class="panel-heading">Financial Year - x</div>
				<div class="panel panel-footer"></div>
			</div>
			<div class="panel panel-default">
				<div class="panel-body">
	            	<div class="dataTable_wrapper">
						<table class="table table-striped table-bordered table-hover" id="dataTables-example">
							<thead><tr>
								<th>Period</th>
								<th>Actual</th>
								<th>Budget</th>
							</tr></thead>
							<tbody>
							    <tr>
							    	<td>{{ budget.getPeriod }}</td>
							    	<td>{{ budget.getActual }}</td>
							    	<td>
							    		{{ form_errors(budget) }}
								    	{{ form_widget(budget.budget, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
								</tr>
	{% else %}
							    <tr>
							    	<td>{{ budget.getPeriod }}</td>
							    	<td>{{ budget.getActual }}</td>
							    	<td>
							    		{{ form_errors(budget) }}
								    	{{ form_widget(budget.budget, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
								</tr>
	{% endif %}
	{% if loop.index0 in [11,23,35] %}
							</tbody>
						</table>
					</div>
				</div>
				<div class="panel-footer">
					<p>Assign monthly budget</p>
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}
<div class="form-group">
	{{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
</div>
{{ form_end(form) }}</div>

{% endblock %}

{% block javascripts %}
	<script>
		
	</script>
    {{ parent() }}
    
    
{% endblock %}
