{# src/Core/AccountingBundle/Resources/views/Maintenance/budgetedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Budget{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Edit Chart of Accounts
{% endblock %}

{% block body %}

<div class="row">	
	{# first column #}
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h4>Account code is {{ account_id }}</h4>
			</div>
			{{ form_start(forms) }}
			<div class="panel-body">
            	<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead><tr>
							<th>Period</th>
							<th>Actual</th>
							<th>Budget</th>
						</tr></thead>
						<tbody>
							{% for row in forms.vars['value'] %}
							    <tr>
							    	<td>{{ row.getPeriod.getPeriodno }}</td>
							    	<td>{{ row.getActual }}</td>
							    	<td>{{ form_row(row.getBudget) }}</td>
								</tr>
						    {% else %}
						        <td colspan="3">"row" failed</td>
						    {% endfor %}
						</tbody>
					</table>
				</div>
			</div>
			<div class="panel-footer">
				<p>Assign monthly budget</p>
			</div>
			{{ form_end(forms) }}
		</div>
	</div>
	

{% endblock %}

