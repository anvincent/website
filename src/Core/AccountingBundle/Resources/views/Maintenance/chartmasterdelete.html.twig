{# src/Core/AccountingBundle/Resources/views/Maintenance/chartmasterdelete.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Chart of Accounts{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Delete Chart of Accounts
{% endblock %}

{% block body %}
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Delete account confirmation
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
				<div class="form-group">
					Please confirm you would like to delete 
					<p class="form-control-static">{{ form.accountcode.vars.value }}
					 - {{ form.accountname.vars.value }}?</p>
				</div>
				<div class="form-group">
					{{ form_widget(form.Confirm, {'attr': {'class': 'btn btn-default'}}) }}
				</div>
			
			</div>			
		</div>				
	</div>
</div>

{% endblock %}