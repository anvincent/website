{# src/Core/AccountingBundle/Resources/views/Default/index.html.twig #}
{% extends 'CoreAccountingBundle::layout.html.twig' %}

{% block title %}Accounting - Test Page{% endblock %}

{% block body %}
<table>
	{% for account in accounts %}
    <tr>
    	<td>{{ account.accountcode }}</td>
    	<td>{{ account.accountname }}</td>
	</tr>
    {% else %}
        <p>There are no accounts within the chart</p>
    {% endfor %}
</table>
{% endblock %}