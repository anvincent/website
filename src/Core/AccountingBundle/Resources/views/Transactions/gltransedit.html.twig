{# src/Core/AccountingBundle/Resources/views/Transactions/gltransedit.html.twig #}
{% extends 'CoreAccountingBundle:Default:accounting.html.twig' %}

{% block title %}Accounting - Manual Journal Entries{% endblock %}

{% block navigation %}
    {{ parent() }}
{% endblock %}

{% block headtitle %}
Enter Manual Journal Entry
{% endblock %}

{% block body %}
{% for flashMessage in app.session.flashbag.get('returnMessage') %}
<div class="row">
	<div class="alert alert-info" role="alert">
        {{ flashMessage }}
    </div>
</div>
<!-- /.row -->
{% endfor %}

<div class="row">{{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-heading">
				Enter Manual Journal Entry
			</div>
			<!-- /.panel-heading -->
		</div>
	</div>
	<div class="col-lg-6">
		<div class="panel panel-default">
			<div class="panel-body">
				<div class="form-group">
					{{ form_label(form.typeno, 'Type No') }}
					<p class="form-control-static">{{ form.typeno.vars.value }}</p>
				</div>
				<div class="form-group">
        			{{ form_label(form.trandate, 'Transaction Date') }}
					{{ form_errors(form.trandate) }}
					{{ form_widget(form.trandate, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
        			{{ form_label(form.periodno, 'Period') }}
					{{ form_errors(form.periodno) }}
					{{ form_widget(form.periodno, {'attr': {'class': 'form-control'}}) }}
				</div>
				<div class="form-group">
        			{{ form_label(form.tag, 'Tag') }}
					{{ form_errors(form.tag) }}
					{{ form_widget(form.tag, {'attr': {'class': 'form-control'}}) }}
				</div>
			</div>
			<!-- /.panel-body for top section -->
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<div class="panel-body">
	           	<div class="dataTable_wrapper">
					<table class="table table-striped table-bordered table-hover" id="dataTables-example">
						<thead><tr>
							<th>Counterindex</th>
							<th>Account</th>
							<th>Amount</th>
							<th>Narrative</th>
						</tr></thead>
						<tbody>
							{% for journalentry in form.journalentries %}
							    <tr>
							    	<td>
							    		{{ form_errors(journalentry) }}
								    	{{ form_widget(journalentry.counterindex, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
							    	<td>
								    	{{ form_widget(journalentry.accountcode, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
							    	<td>
								    	{{ form_widget(journalentry.amount, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
							    	<td>
								    	{{ form_widget(journalentry.narrative, {'attr': {'class': 'form-control input-sm'}}) }}
								    </td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- /.row -->

{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}