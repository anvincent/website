{# src/Core/BlogBundle/Resources/views/Page/contact.html.twig #}
{% extends 'CoreBlogBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact kaisernet</h1>
    </header>

    <p>Want to contact kaisernet?</p>

    <form action="{{ path('CoreBlogBundle_contact') }}" method="post" {{ form_enctype(form) }} class="core">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}